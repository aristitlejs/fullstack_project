<!DOCTYPE html>
<html>
<head>
    <title>user List</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body >
<div class="container" style="display: flex; flex-wrap: wrap;" >
    <div class="header" style="width: 100%;margin: 10px; ">
        <h1>User List</h1>
        <br>
        <a class="add-user-link" href="/add-user">Add User</a>
    </div>
    <div class="userList">
        <% users.forEach(user => { %>
            <div class="card">
                <% if (user.image) { %>
                    <img src="/uploads/<%= user.image %>" alt="User Image" width="100" height="100">
                <% } else { %>
                    <img src="https://via.placeholder.com/100" alt="No Image">
                <% } %>
                <div class="card-content">
                    <div class="card-title"><%= user.name %></div>
                    <div class="card-email">Email : <%= user.email %></div>
                    <div class="card-email">Age : <%= user.age %></div>
                    <div class="card-email">Phone : <%= user.phone %></div>
                    <div class="card-action">
                        <a href="/edit-user?id=<%= user.id %>"> Edit </a>
                        &nbsp
                        <a href="/delete-user?id=<%= user.id %>"> Delete </a>
                    </div>
                </div>
             
            </div>
            <% }) %>
    </div>

</div>
</body>
</html>